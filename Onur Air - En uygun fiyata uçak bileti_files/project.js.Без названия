	 $(document).ready(function() {
      var owl = $("#onurExtraHome .pageBanner");
			    owl.owlCarousel({
				items : 1,
				itemsDesktop      : [1199,3],
				itemsDesktopSmall     : [979,3],
				itemsTablet       : [768,3],
				itemsMobile       : [479,3],
				});

    });

   $(document).ready(function() {

      var sync1 = $("#sync1");
      var sync2 = $("#sync2");

      sync1.owlCarousel({
        singleItem : true,
        slideSpeed : 1000,
        navigation: true,
        pagination:false,
        afterAction : syncPosition,
        responsiveRefreshRate : 200,
		autoPlay : 7000
      });

      sync2.owlCarousel({
        items : 3,
        itemsDesktop      : [1199,3],
        itemsDesktopSmall     : [979,3],
        itemsTablet       : [768,3],
        itemsMobile       : [479,3],
        pagination:false,
        responsiveRefreshRate : 100,
        afterInit : function(el){
          el.find(".owl-item").eq(0).addClass("synced");
        }
      });

      function syncPosition(el){
        var current = this.currentItem;
        $("#sync2")
          .find(".owl-item")
          .removeClass("synced")
          .eq(current)
          .addClass("synced")
        if($("#sync2").data("owlCarousel") !== undefined){
          center(current)
        }

      }

      $("#sync2").on("click", ".owl-item", function(e){
        e.preventDefault();
        var number = $(this).data("owlItem");
        sync1.trigger("owl.goTo",number);
      });

      function center(number){
        var sync2visible = sync2.data("owlCarousel").owl.visibleItems;

        var num = number;
        var found = false;
        for(var i in sync2visible){
          if(num === sync2visible[i]){
            var found = true;
          }
        }

        if(found===false){
          if(num>sync2visible[sync2visible.length-1]){
            sync2.trigger("owl.goTo", num - sync2visible.length+2)
          }else{
            if(num - 1 === -1){
              num = 0;
            }
            sync2.trigger("owl.goTo", num);
          }
        } else if(num === sync2visible[sync2visible.length-1]){
          sync2.trigger("owl.goTo", sync2visible[1])
        } else if(num === sync2visible[0]){
          sync2.trigger("owl.goTo", num-1)
        }
      }

    });








	jQuery(document).ready( function() {

	var tabShow = getParameterByName('tabShow');

	if(tabShow =="")
	{

	jQuery(".biletSatisContainer").addClass("hover");
	// biletSatis butonu üzerine gelince açılan menü
    jQuery(".biletSatisContainer").click(function () {
        jQuery("#biletSatisContainerContent").slideDown("fast");
		jQuery("#onlineCheckInContainerContent").slideUp("fast");
		jQuery("#otelRezervasyonContainerContent").slideUp("fast");
		jQuery("#aracKiralamaContainerContent").slideUp("fast");
		jQuery(".tabMenu div").removeClass("hover");
		jQuery(".biletSatisContainer").addClass("hover");
		jQuery("#rezervasyonIslemlerimContainerContent").slideUp("fast");
    });
    // biletSatis butonu üzerine gelince açılan menü
	// onlineCheckIn butonu üzerine gelince açılan menü
    jQuery(".onlineCheckInContainer").click(function () {
        jQuery("#onlineCheckInContainerContent").slideDown("slow");
		jQuery(".tabMenu div").removeClass("hover");
		jQuery(".onlineCheckInContainer").addClass("hover");
		jQuery("#biletSatisContainerContent").slideUp("fast");
		jQuery("#otelRezervasyonContainerContent").slideUp("fast");
		jQuery("#aracKiralamaContainerContent").slideUp("fast");
		jQuery("#rezervasyonIslemlerimContainerContent").slideUp("fast");
    });
    // onlineCheckIn butonu üzerine gelince açılan menü
	// otelRezervasyon butonu üzerine gelince açılan menü
    jQuery(".otelRezervasyonContainer").click(function () {
		jQuery(".tabMenu div").removeClass("hover");
		jQuery("#biletSatisContainerContent").slideDown("fast");
		jQuery("#onlineCheckInContainerContent").slideUp("fast");
		jQuery("#otelRezervasyonContainerContent").slideUp("fast");
		jQuery("#aracKiralamaContainerContent").slideUp("fast");
		jQuery(".tabMenu div").removeClass("hover");
		jQuery(".biletSatisContainer").addClass("hover");
		jQuery("#rezervasyonIslemlerimContainerContent").slideUp("fast");
    });
    // otelRezervasyon butonu üzerine gelince açılan menü
	// aracKiralama butonu üzerine gelince açılan menü
    jQuery(".aracKiralamaContainer").click(function () {
        jQuery("#aracKiralamaContainerContent").slideDown("slow");
		jQuery(".tabMenu div").removeClass("hover");
		jQuery(".aracKiralamaContainer").addClass("hover");
		jQuery("#biletSatisContainerContent").slideUp("fast");
		jQuery("#onlineCheckInContainerContent").slideUp("fast");
		jQuery("#otelRezervasyonContainerContent").slideUp("fast");
		jQuery("#rezervasyonIslemlerimContainerContent").slideUp("fast");
    });
    // aracKiralama butonu üzerine gelince açılan menü


	// rezervasyonIslemlerim butonu üzerine gelince açılan menü
    jQuery(".rezervasyonIslemlerimContainer").click(function () {
        jQuery("#rezervasyonIslemlerimContainerContent").slideDown("slow");
		jQuery(".tabMenu div").removeClass("hover");
		jQuery(".rezervasyonIslemlerimContainer").addClass("hover");
		jQuery("#biletSatisContainerContent").slideUp("fast");
		jQuery("#onlineCheckInContainerContent").slideUp("fast");
		jQuery("#aracKiralamaContainerContent").slideUp("fast");
		jQuery("#otelRezervasyonContainerContent").slideUp("fast");
    });
    // rezervasyonIslemlerim butonu üzerine gelince açılan menü

    }

    $(".charterLangue a.fr").click(function(){
		$(".charterRight.French").css("display","block");
		$(".charterRight.English").css("display","none");
	});
    $(".charterLangue a.en").click(function(){
		$(".charterRight.English").css("display","block");
		$(".charterRight.French").css("display","none");
	});


	});
