$(document).ready(function() {
      var owl = $("#bannersSlider");
			    owl.owlCarousel({
				items : 4,
				});
      $(".bannersContent .customNavigation .next").click(function(){
        owl.trigger('owl.next');
      })
      $(".bannersContent .customNavigation .prev").click(function(){
        owl.trigger('owl.prev');
      })
    });


	 $(document).ready(function() {
